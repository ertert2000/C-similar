<Window x:Class="WpfApp3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="600" Width="920">
    <Window.Style>
        <Style TargetType="Window">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#FF1E1E1E"/>
            <Setter Property="BorderBrush" Value="#FF1E1E1E"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="WindowChrome.WindowChrome">
                <Setter.Value>
                    <WindowChrome CaptionHeight="30"
                                  GlassFrameThickness="0"
                                  CornerRadius="0"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Style>
    <Grid>
        <Button Content="Close" WindowChrome.IsHitTestVisibleInChrome="True" Click="ExitButtonClick" HorizontalAlignment="Left" Height="34" Margin="855,0,0,0" VerticalAlignment="Top" Width="35"/>
        <Button Content="Hide" WindowChrome.IsHitTestVisibleInChrome="True" Click="HideButtonClick" HorizontalAlignment="Left" Height="29" Margin="810,0,0,0" VerticalAlignment="Top" Width="30"/>

    </Grid>
</Window>